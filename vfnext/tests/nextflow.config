/*
========================================================================================
    Nextflow config file for running tests
========================================================================================
*/
// Test-specific configuration
params {
    // Default test parameters
    outDir = "test_results"
}

// Enable Singularity for testing
singularity {
    enabled = true
    autoMounts = true
    runOptions = "--writable-tmpfs"
}

// Test-specific process settings
process {
    cpus = 1
    memory = '1 GB'
}