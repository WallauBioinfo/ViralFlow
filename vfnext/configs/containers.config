singularity {
    enabled = true
    autoMounts = true
    // --- GAMBIARRA ALERT ----------------------------------------------------
    // '--writable-tmpfs' is necessary to run snpEff. By default, snpeff builds
    // the database on the exec path. So the softwares needs to write files
    // inside the container. This should be a temporary fix, a way to set the
    // snpEff to write on a location outside the container must be investigated.
    //
    // This change affect running of all containers, which is not ideal.
    //runOptions = "--writable-tmpfs"
    runOptions = "--writable-tmpfs"
    // ------------------------------------------------------------------------
}

process {
    withName:prepareDatabase{
        container = "library://wallaulabs/viralflow/edirect:latest"
    }
    withName:indexReferenceBWA {
        container = "library://wallaulabs/viralflow/mapping_reference:1.0.0"
    }
    withName:runFastp {
        container = "library://wallaulabs/viralflow/fastp:0.23.4"
    }
    withName:runIvar {
        container = "library://wallaulabs/viralflow/generate_consensus:1.0.0"
    }
    withName:align2ref {
        container = "library://wallaulabs/viralflow/generate_consensus:1.0.0"
    }
    withName:runReadCounts {
        container = "library://wallaulabs/viralflow/intrahost_analysis:1.0.0"
    }
    withName:alignConsensus2Ref {
        container = "library://wallaulabs/viralflow/mafft:7.505"
    }
    withName:runNextClade{
        container = "library://wallaulabs/viralflow/nextclade:2.4"
    }
    withName:runPicard{
       container = "library://wallaulabs/viralflow/picard:2.27.2"
    }
    withName:genFaIdx{
        container = "library://wallaulabs/viralflow/samtools:1.15"
    }
    withName:getMappedReads{
        container = "library://wallaulabs/viralflow/samtools:1.15"
    }
    withName:getUnmappedReads{
        container = "library://wallaulabs/viralflow/samtools:1.15"
    }
    withName:runVfReport{
        container = "library://wallaulabs/viralflow/generate_report:1.0.0"
    }
    withName:coveragePlot{
        container = "library://wallaulabs/viralflow/generate_plots:1.0.0"
    }
    withName:snpPlot{
        container = "library://wallaulabs/viralflow/generate_plots:1.0.0"
    }
    withName:compileOutputs{
        container = "library://wallaulabs/viralflow/compiled_outputs:1.0.0"
    }
    withName:runSnpEff{
        container = "$projectDir/containers/singularity_snpeff.sif"
    }
    withName:runPangolin{
        container = "$projectDir/containers/pangolin_latest.sif"
    }
    withName:checkSnpEffDB{
        container = "$projectDir/containers/singularity_snpeff.sif"
    }

}
